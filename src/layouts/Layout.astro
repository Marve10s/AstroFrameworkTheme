---
import { ClientRouter } from 'astro:transitions';
import Analytics from '@vercel/analytics/astro'
import { SEO } from 'astro-seo';
import Background from '../components/ui/Background.astro';
import Footer from '../components/ui/Footer.astro';
import Header from '../components/ui/Header.astro';
import '../styles/global.css';

interface Props {
	title: string;
	bgColor?: string;
	primaryBallColor?: string;
	secondaryBallColor?: string;
	gridColor?: string;
	diagonalColor?: string;
	vignetteColor?: string;
}

const { 
	title, 
	bgColor = '#0F1115',
	primaryBallColor,
	secondaryBallColor,
	gridColor,
	diagonalColor,
	vignetteColor
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={title}
			titleTemplate='%s - Astro Framework Theme'
			description="Your comprehensive guide to building modern websites with Astro Framework"
			openGraph={{
				basic: {
					title: title || "Astro Framework Theme",
					type: "website",
					image: "/og-image.jpg",
					url: "https://example.com",
				},
				optional: {
					locale: "en_US",
					siteName: "Astro Framework Theme",
					description: "Your comprehensive guide to building modern websites with Astro Framework",
				},
			}}
			twitter={{
				card: "summary_large_image",
				site: "@yourtwitterhandle",
				creator: "@yourtwitterhandle",
				title: title,
				description: "Your comprehensive guide to building modern websites with Astro Framework",
				image: "/twitter-image.jpg",
			}}
			extend={{
				meta: [
					{ name: "twitter:image", content: "/your-twitter-image.jpg" },
					{ name: "twitter:title", content: title },
					{ name: "twitter:description", content: "Your site description" },
					{ name: "theme-color", content: "#0F1115" },
					{ name: "apple-mobile-web-app-capable", content: "yes" },
					{ name: "apple-mobile-web-app-status-bar-style", content: "black" },
				],
				link: [
					{ rel: "canonical", href: "https://example.com" },
					{ rel: "icon", type: "image/png", href: "/favicon.png" },
					{ rel: "apple-touch-icon", href: "/apple-touch-icon.png" },
				],
			}}
		/>
		<title>{title}</title>
		<ClientRouter />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<link href="https://api.fontshare.com/v2/css?f[]=cal-sans@400,500,600&display=swap" rel="stylesheet">
		<Analytics />
	</head>
	<body 
		class="m-0 min-h-screen relative font-sans" 
		style={`background-color: ${bgColor}`}
	>
		<Background 
			primaryBallColor={primaryBallColor}
			secondaryBallColor={secondaryBallColor}
			gridColor={gridColor}
			diagonalColor={diagonalColor}
			vignetteColor={vignetteColor}
		/>
		<Header />
		<slot />
		<div class="mb-32">
			<Footer />
		</div>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark;
	}

	html {
		font-family: system-ui, sans-serif;
		color: white;
	}
</style>
